<div class="text-center mt-5">
  <h1 class="h3 mb-3 font-weight-normal">サイト管理者ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-25 mx-auto" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'd-none' %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'メールアドレス', style: "height: 50px" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "d-none" %><br/>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'パスワード', style: "height: 50px" %>
    </div>

    <div class="checkbox mt-3 mb-3">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.shared.links.sign_in'), class: "mb-3 btn btn-lg btn-primary btn-block", style: "width: 100%" %>
    </div>
  <% end %>
  <%= render "admins/shared/links" %>
</div>
