<%= javascript_pack_tag ('agreementCheck') %>

<div class="signUpIndex">
  <div class="signUpIndex__container">
    <h1 class="signUpIndex__title">会員登録</h1>
    <div class="signUpIndex__wrapper">
      <div class="signBox signUp">
        <div class="signBox__wrapper">
          <%# TODO: 劣後対応 / SNS認証へ飛ばすようにする %>
          <%# <div class="sns">
            <button class="generalButton google outlineBrown textBrown">Googleで会員登録</button>
            <button class="generalButton facebook outlineBrown textBrown">Facebookで会員登録</button>
          </div> %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="loginFormItem">
              <%= f.label :email, 'メールアドレス', { class: 'loginFormItem__title' } %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: '例）abcd@sokkin-match.me', class: 'loginFormItem__item' %>
            </div>
            <div class="loginFormItem">
              <%= f.label :password, 'パスワード', { class: 'loginFormItem__title' } %>
              <%= f.password_field :password, autocomplete: 'new-password', placeholder: '半角英数8桁以上で入力してください', class: 'loginFormItem__item' %>
            </div>

            <label class="agreementCheckBox">
              <%= f.check_box :agreement, :as => :boolean, checked: false, id: :user_agreement, autocomplete: 'off', class: 'agreementCheckBox__checkbox' %>
              <span class="agreementCheckBox__text">SOKKIN MATCHの<a href="https://sokkin-match.me/partner/terms/" class="bold">利用規約</a>と<a href="https://sokkin-match.me/partner/privacy/" class="bold">プライバシーポリシー</a>に同意します</span>
            </label>
            <%= f.submit '登録へ進む', class: 'generalButton bgBrown textWhite', disabled: true, id: :confirm %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
