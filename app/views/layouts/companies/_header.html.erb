<div class="header">
  <div class="wrapper">
    <h1 class="header__logo">
      <%= link_to image_tag('common/header/logo.svg'), companies_home_path %>
    </h1>
    <div class="right">
      <ul class="headerMenu">
        <li class="headerMenu__item profileIcon company">
          <div class="profileModal company none modal profile">
            <h2 class="profileModal__title"><%= current_company&.name %></h2>
            <ul class="modalList">
              <li class="modalList__item"><%= link_to 'アカウント設定', companies_account_path, class: 'link account' %></li>
              <li class="modalList__item"><%= link_to 'ログアウト', destroy_company_session_path, class: 'link logout' %></li>
            </ul>
          </div>
        </li>
      </ul>
      <div class="hamburger">
        <span class="hamburger__border"></span>
        <span class="hamburger__border"></span>
        <span class="hamburger__border"></span>
      </div>
    </div>
  </div>
</div>
